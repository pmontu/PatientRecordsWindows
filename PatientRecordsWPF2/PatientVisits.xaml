<Window x:Class="PatientRecordsWPF2.PatientVisits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Records" Height="635" Width="641">
    <Grid Margin="10,0,10,10">
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label FontFamily="Trebuchet MS" 
        FontWeight="Bold" FontSize="18" Foreground="#0066cc" Grid.ColumnSpan="2" Margin="60,31,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="383">
            Manojkumar Purushothaman
        </Label>

        <!--<Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Details</Label>
        </Border>-->
        <TabControl Grid.Row="1" Grid.Column="1" Background="White" >
            <TabItem >
                <TabItem.Header>
                    <!--<Border Height="35" Padding="5" Background="#4E87D4">
                        <Label VerticalAlignment="Center" Foreground="White">Details</Label>
                    </Border>-->
                    <TextBlock FontWeight="Bold">Visit Details</TextBlock>
                </TabItem.Header>
                <Grid Grid.Column="1" Grid.Row="2" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel >
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Referred By:
                        </Label>
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Doctor's Mail Id:
                        </Label>
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Doctor Attended:
                        </Label>
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Date of Examination:
                        </Label>
                        <Label Margin="0,2,30,2" Height="90" HorizontalContentAlignment="Right">
                            Symptoms:
                        </Label>
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Diagnosis:
                        </Label>
                        <Label Margin="0,2,30,2" Height="30" HorizontalContentAlignment="Right">
                            Treatment:
                        </Label>
                        <Label Margin="0,2,30,2" Height="90" HorizontalContentAlignment="Right">
                            Tags:
                        </Label>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBox Margin="12,2" Height="30" />
                        <TextBox Margin="12,2" Height="30" />
                        <TextBox Margin="12,2" Height="30" />
                        <DatePicker Margin="12,2" Height="30"/>
                        <Grid Margin="12,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Height="30" Margin="0,0,2,0"  />
                            <Button Grid.Column="1">Add</Button>
                        </Grid>
                        <TextBox Margin="12,2" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        <TextBox Margin="12,2" Height="30" />
                        <TextBox Margin="12,2" Height="30" />
                        <Grid Margin="12,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Height="30" Margin="0,0,2,0"  />
                            <Button Grid.Column="1">Add</Button>
                        </Grid>
                        <TextBox Margin="12,2" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- View report button -->
        <Button Grid.Column="1" Grid.Row="3" Margin="0,10,0,0" Width="125"
Height="25" HorizontalAlignment="Right">Create</Button>
        
        <Grid Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="147*"/>
                    <ColumnDefinition Width="73*"/>
                </Grid.ColumnDefinitions>
                <Border Height="35" Padding="5" Background="#4E87D4">
                    <Label VerticalAlignment="Center" Foreground="White">Visits</Label>
                </Border>
                <Button Grid.Column="1"  VerticalAlignment="Center" Grid.Row="1" Style="{StaticResource LinkButton}" HorizontalAlignment="Right">+ add new</Button>
            </Grid>
            <ListBox Name="peopleListBox" Grid.Row="1">
                <ListBoxItem>1 - Jan - 2013</ListBoxItem>
                <ListBoxItem>1 - Dec - 2012</ListBoxItem>
                <ListBoxItem>13 - Nov - 2012</ListBoxItem>
                <ListBoxItem>23 - Feb - 2013</ListBoxItem>
                <ListBoxItem>3 - Dec - 2012</ListBoxItem>
                <ListBoxItem>13 - Mar - 2012</ListBoxItem>
                <ListBoxItem>14 - Jan - 2013</ListBoxItem>
                <ListBoxItem>6 - Dec - 2012</ListBoxItem>
                <ListBoxItem>13 - June - 2012</ListBoxItem>
                <ListBoxItem>11 - Jan - 2013</ListBoxItem>
                <ListBoxItem>24 - Jul - 2012</ListBoxItem>
                <ListBoxItem>13 - Nov - 2012</ListBoxItem>
            </ListBox>
        </Grid>
        
        
    </Grid>
</Window>
