<Window x:Name="wReport" x:Class="PatientRecordsWPF2.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report" Height="300" Width="300" Loaded="wReport_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label FontFamily="Trebuchet MS" 
        FontWeight="Bold" FontSize="18" Foreground="#0066cc" Margin="0,0,0,10">
            Report
        </Label>
        <DataGrid x:Name="dgReport" Grid.Row="1" Margin="10,0,10,10"/>
    </Grid>
</Window>
