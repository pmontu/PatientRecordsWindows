<Window x:Name="PageSwitcher" x:Class="PatientRecordsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Records" Height="600" Width="800" Activated="PageSwitcher_Activated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAdd" Click="btnAdd_Click" Content="New" >
            </Button>
            <Button  x:Name="btnSearch" Grid.Column="1" Click="btnSearch_Click" Content="Search">
            </Button>  
        </Grid>
        <Frame x:Name="frameContainer" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
